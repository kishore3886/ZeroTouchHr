@page
@model books.Pages.EmployeeList.CreateModel
@{
}


<br />

<h2 class="text-info"> Create New User </h2>
<br />

<div class="border container" style="padding:30px">
    <form  method="post">

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">

            <div class="col-3">
                <label asp-for="employee.FName"></label>

            </div>
            <div class="col-6">

                <input asp-for="employee.FName" class="form-control" placeholder="Enter First Name" />
            </div>
            <span asp-validation-for="employee.FName" class="text-danger"></span>
        </div>

        <div class="form-group row">

            <div class="col-3">
                <label asp-for="employee.LName"></label>

            </div>
            <div class="col-6">

                <input asp-for="employee.LName" class="form-control" placeholder="Enter Last Name" />
            </div>
            <span asp-validation-for="employee.LName" class="text-danger"></span>

        </div>

        <div class="form-group row">

            <div class="col-3">
                <label asp-for="employee.PhoneNumber"></label>

            </div>
            <div class="col-6">

                <input asp-for="employee.PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
            </div>
            <span asp-validation-for="employee.PhoneNumber" class="text-danger"></span>

        </div>

        <div class="form-group row">

            <div class="col-3 offset-3">
                <input type="submit"  value="create" class="btn btn-outline-success" />
            </div>
            <div class="col-3">

                <a asp-page="Index" class="btn btn-outline-info">Back To List</a>
            </div>

        </div>

    </form>
</div>


@section Scripts{

<partial name="_validationScriptsPartial"/>


 }